<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Camera permission required for CameraX preview and capture -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- Declare that this app requires a camera to function -->
    <!-- required="false" allows installation on devices without cameras, but app won't work -->
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GuideCam">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.GuideCam"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize">
            <!-- 
                screenOrientation="portrait" locks to portrait mode for consistent framing
                configChanges prevents activity recreation on orientation changes
                This ensures overlay alignment remains consistent with captured images
            -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>